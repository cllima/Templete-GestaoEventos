@model GestaoEventos.Portal.Web.Models.Evento

@{
    ViewData["Title"] = "Remover";
}

<h1>Excluir Evento</h1>

<h3>Tem certeza de que deseja excluir?</h3>
<div>

    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Local)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Local)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
    
    <form asp-action="Remover">
        <input type="submit" value="Excluir" class="btn btn-danger btn-lg" /> |
        <a asp-action="ListarEventos" class= "btn btn-primary btn-lg">Voltar p/ Lista</a>
    </form>
</div>
